<UserControl x:Class="MediaTagger.MetaData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaTagger"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel DockPanel.Dock="Bottom" Background="#7F000000" VerticalAlignment="Bottom">
        <Label x:Name="Title" Content="" Margin="-5" Foreground="White" FontSize="18" HorizontalContentAlignment="Center"/>
        <Label x:Name="Artist" Content="" Margin="-5" Foreground="White" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label x:Name="Album" Content="" Margin="-5" Foreground="White" FontSize="12" HorizontalContentAlignment="Center"/>
        <Label x:Name="Year" Content="" Margin="-10" Foreground="White" FontSize="12" HorizontalContentAlignment="Center"/>
    </StackPanel>
</UserControl>
